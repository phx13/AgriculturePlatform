<base:ChartViewBase xmlns:base="clr-namespace:Digihail.DAD3.Charts.Base;assembly=DAD3.Charts"
                    x:Class="CM.SwitchMonthImage.ImageSwitchView"
                    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <Grid>
        <StackPanel Orientation="Horizontal">
            <Image x:Name="ShowImage"
                   VerticalAlignment="Bottom"
                   Width="145"
                   Height="70" />
            <TextBlock Text="月"
                       Margin="10,0,0,0"
                       VerticalAlignment="Bottom"
                       FontSize="{Binding DVM.AxisLabelFontSize}"
                       FontFamily="{Binding DVM.AxisLabelFontFamily}"
                       Foreground="{Binding DVM.LegendTextColor}"
                       FontWeight="Bold" />
        </StackPanel>
    </Grid>
</base:ChartViewBase>