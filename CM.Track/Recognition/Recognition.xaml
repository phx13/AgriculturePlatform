                    xmlns:base="clr-namespace:Digihail.DAD3.Charts.Base;assembly=DAD3.Charts">

    <Grid Height="300"
          Width="{Binding MyWidth}">
        <Grid Panel.ZIndex="10">
            <Image x:Name="mask"
                   VerticalAlignment="Stretch"
                   Stretch="Fill" Source="/CM.Track;component/Images/遮罩.png" />
        </Grid>

        <Image x:Name="img"
