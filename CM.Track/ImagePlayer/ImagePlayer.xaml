<base:ChartViewBase x:Class="CM.Track.ImagePlayer.ImagePlayer"
                    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:base="clr-namespace:Digihail.DAD3.Charts.Base;assembly=DAD3.Charts">

    <Image x:Name="img"
           Height="{Binding MyHeight}"
           Width="{Binding MyWidth}"
           HorizontalAlignment="Center"
           VerticalAlignment="Stretch" Stretch="UniformToFill" />
</base:ChartViewBase>